{
    "$schema": "https://biomejs.dev/schemas/2.2.5/schema.json",
    "extends": ["ultracite"],
    "formatter": {
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "indentWidth": 4,
            "quoteStyle": "double"
        }
    },
    "json": {
        "formatter": {
            "indentWidth": 4
        }
    },
    "linter": {
        "rules": {
            "suspicious": {
                "noConsole": "off",
                "noUnknownAtRules": "off"
            },
            "a11y": {
                "noSvgWithoutTitle": "off"
            },
            "style": {
                "noEnum": "off",
                "noNestedTernary": "off",
                "noMagicNumbers": "off",
                "useNamingConvention": "off"
            },
            "performance": {
                "noNamespaceImport": "off"
            },
            "nursery": {
                "useConsistentTypeDefinitions": "off",
                "noUnnecessaryConditions": "off"
            }
        }
    }
}
